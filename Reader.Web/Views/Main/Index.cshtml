<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MiniReader</title>
    <link rel="stylesheet/less" type="text/css" href="~/a/less/app.less" />
    <script src="~/a/js/lib/less.js"></script>
</head>
<body>
    <nav class="meny row-fluid">
        <h1>MiniReader</h1>
        <ul>
            <li><button type="button" class="btn">All</button></li>
            <li><button type="button" class="btn" data-toggle="modal" data-target="#AddFeedModal">Add</button></li>
        </ul>
        <ul id="Feeds">
            <li>One</li>
            <li>Two</li>
            <li>Three</li>
        </ul>
        <div class="span12 navbar-fixed-bottom">
            <div class="row-fluid">
                <div class="span6">
                    <a data-toggle="modal" data-target="#SettingsModal" class="btn btn-block">
                        Settings
                    </a>
                </div>
                <div class="span6">
                    <a href="/sign-out" class="btn btn-block">Sign Out</a>
                </div>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        Hey @User.Identity.Name
    </div>
    @Html.Partial("~/Views/Main/Modals/Settings.cshtml")
    @Html.Partial("~/Views/Main/Modals/AddFeed.cshtml")
    <script src="~/a/js/lib/meny.js"></script>
    <script src="~/a/js/lib/jquery.js"></script>
    <script src="~/a/js/lib/bootstrap.js"></script>
    <script src="~/a/js/local/app.js"></script>
</body>
</html>