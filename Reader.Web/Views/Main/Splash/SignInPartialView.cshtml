@model Reader.Web.Models.SignInViewModel


@using (Html.BeginForm()) 
{
    <fieldset>
        <legend>Sign In / Register</legend>
    
    @Html.ValidationSummary(true)

    <div class="control-group">
        @Html.LabelFor(model => model.Email, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(model => model.Email, new { })
            <span class="help-block">@Html.ValidationMessageFor(model => model.Email)</span>
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(model => model.Password, new { @class = "control-label" })
        <div class="controls">
            @Html.PasswordFor(model => model.Password, new { })
            <span class="help-block">@Html.ValidationMessageFor(model => model.Password)</span>
        </div>
    </div>    
        </fieldset>
}